<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Notifications</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f7f7f7;
            color: #333;
            font-family: 'Roboto', sans-serif;
            padding-top: 20px;
        }

        .container {
            margin-top: 50px;
            padding: 0 20px;
            max-width: 800px;
        }

        .card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        }

        .card h1 {
            margin-bottom: 20px;
            color: #007bff;
            font-weight: bold;
            text-align: center;
        }

        .list-group-item {
            border: none;
            padding: 20px;
            margin-bottom: 15px;
            border-radius: 8px;
            background-color: #f1f1f1;
            transition: background-color 0.3s ease, transform 0.3s ease;
            color: #333;
            font-size: 1.1rem;
        }

        .list-group-item:hover {
            background-color: #e9e9e9;
            transform: translateY(-3px);
        }

        .list-group-item h5 {
            margin-bottom: 10px;
            color: #007bff;
            font-weight: bold;
            font-size: 1.3rem;
        }

        .list-group-item p {
            margin-bottom: 10px;
            color: #666;
            font-size: 1.1rem;
        }

        .list-group-item small {
            color: #999;
            font-size: 0.9rem;
        }

        .btn-primary {
            color: #ffffff;
            background-color: #007bff;
            border: none;
            border-radius: 30px;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.3s ease;
            display: inline-block;
            margin-bottom: 20px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-3px);
        }

        .navbar {
            background-color: #007bff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 500;
            font-size: 1.5rem;
            color: #ffffff;
        }

        .navbar-brand:hover {
            color: #e0eafc;
        }

        .navbar img {
            margin-right: 10px;
        }

        .no-notifications {
            text-align: center;
            font-size: 1.2rem;
            color: #999;
            padding: 50px;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <img src="icons/iut-logo.jpeg" width="40" height="50" class="d-inline-block align-top" alt="">
            <a class="navbar-brand" href="#">Student Notifications</a>
        </div>
    </nav>

    <div class="container">
        <div class="card">
            <h1>Student Notifications</h1>
            <% if (notifications.length === 0) { %>
                <p class="no-notifications">No notifications available.</p>
            <% } else { %>
                <div class="list-group">
                    <% notifications.forEach(notification => { %>
                        <a href="#" class="list-group-item list-group-item-action">
                            <!-- Display Notification Details -->
                            <h5><%= notification.title %></h5>
                            <p><%= notification.message %></p>
                            <small><%= notification.created_at %></small>
                        </a>
                    <% }); %>
                </div>
            <% } %>
        </div>
        <div class="text-center mt-5">
            <a class="btn btn-primary" href="/student-dashboard"><i class="fas fa-arrow-left"></i> Go Back to Dashboard</a>
        </div>
    </div>

    <!-- Bootstrap core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
