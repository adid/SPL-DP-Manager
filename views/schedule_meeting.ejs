<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Schedule Meeting</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="icons/iut-logo.jpeg" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Core theme CSS -->
    <style>
        body {
            background-image: url('https://cdn.dribbble.com/users/612155/screenshots/1718172/media/48a62c417f5f070ea7683b964d83c1ed.gif');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .container {
            margin-top: 100px;
        }

        .form-container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container">
            <img src="icons/iut-logo.jpeg" width="40" height="50" class="d-inline-block align-top" alt="">
            <a class="navbar-brand text-white" href="#">Schedule Meeting</a>
        </div>
    </nav>

    <!-- Schedule Meeting Section -->
    <div class="container center-content">
        <div class="form-container">
            <h1 class="text-center mb-4">Schedule Meeting</h1>
            <form action="/schedule_meeting" method="post">
                <div class="form-group">
                    <label for="team">Select Team:</label>
                    <select class="form-control" id="team" name="team" required>
                        <% teams.forEach(function(team) { %>
                            <option value="<%= team.team_id %>"><%= team.team_name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="meetingDate">Meeting Date:</label>
                    <input type="date" class="form-control" id="meetingDate" name="meetingDate" required />
                </div>

                <div class="form-group">
                    <label for="meetingTime">Meeting Time:</label>
                    <input type="time" class="form-control" id="meetingTime" name="meetingTime" required />
                </div>

                <div class="form-group">
                    <label for="meetingDetails">Meeting Details:</label>
                    <textarea class="form-control" id="meetingDetails" name="meetingDetails" rows="3" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-4">Schedule Meeting</button>
                 <!-- View Meetings Button -->
                <div class="text-center mt-3">
                     <a href="/view-meetings" class="btn btn-secondary">View Meetings</a>
                </div>           
            </form>
        </div>
    </div>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
