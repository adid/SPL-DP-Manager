<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Schedule your meetings easily" />
    <meta name="author" content="Your Name" />
    <title>Schedule Meeting</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="icons/iut-logo.jpeg" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-image: url('https://cdn.pixabay.com/photo/2016/11/18/16/48/blur-1839876_960_720.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: 'Roboto', sans-serif;
            color: #333;
        }

        .container {
            margin-top: 100px;
        }

        .form-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
            animation: fadeIn 1s ease-in-out;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .navbar {
            background-color: #007bff;
            padding: 10px 0;
        }

        .navbar-brand {
            font-weight: bold;
            color: #ffffff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            transition: background-color 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

        .form-header {
            margin-bottom: 30px;
            font-weight: 500;
        }

        .btn-back {
            background-color: #0056b3;
            border-color: white;
            color: white;
            transition: background-color 0.3s ease;
        }

        .btn-back:hover {
            background-color: red;
            border-color: #545b62;
            color: #ffffff;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>
</head>

<body>

    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <img src="icons/iut-logo.jpeg" width="40" height="50" class="d-inline-block align-top" alt="">
            <a class="navbar-brand" href="#">Schedule Meeting</a>
        </div>
    </nav>

    <!-- Flash Message -->
    <div class="alert-container">
        <% if (typeof successFlash !== 'undefined' && successFlash.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= successFlash %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (typeof errorFlash !== 'undefined' && errorFlash.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorFlash %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    </div>

    <!-- Schedule Meeting Section -->
    <div class="container">
        <div class="form-container">
            <h1 class="text-center form-header">Schedule Meeting</h1>
            <form action="/schedule_meeting" method="post">
                <div class="form-group">
                    <label for="team">Select Team:</label>
                    <select class="form-control" id="team" name="team" required>
                        <% teams.forEach(function(team) { %>
                            <option value="<%= team.team_id %>"><%= team.team_name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="meetingDate">Meeting Date:</label>
                    <input type="date" class="form-control" id="meetingDate" name="meetingDate" required />
                </div>

                <div class="form-group">
                    <label for="meetingTime">Meeting Time:</label>
                    <input type="time" class="form-control" id="meetingTime" name="meetingTime" required />
                </div>

                <div class="form-group">
                    <label for="meetingDetails">Meeting Details:</label>
                    <textarea class="form-control" id="meetingDetails" name="meetingDetails" rows="3" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-4">Schedule Meeting</button>
            </form>
            
            <!-- Back to Dashboard Button -->
            <div class="text-center mt-3">
                <a href="/teacher-dashboard" class="btn btn-back">Back to Dashboard</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
