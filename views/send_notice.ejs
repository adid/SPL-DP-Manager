<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes" />
    <title>Send Notice</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #007bff !important;
        }

        .navbar-brand {
            color: #ffffff;
            font-size: 1.5rem;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #343a40;
        }

        .form-label {
            color: #343a40;
            font-weight: bold;
        }

        .form-control {
            border-color: #ced4da;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }


        .btn-back {
            background-color: transparent;
            border: 2px solid #ffffff;
            color: #ffffff;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

        .btn-back:hover {
            background-color: #ffffff;
            color: #007bff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            font-weight: bold;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Send Notice</a>
            <a class="btn btn-back" href="/admin-dashboard">Back to Dashboard</a>
        </div>
    </nav>

    <!-- Flash Message -->
    <div class="alert-container">
        <% if (typeof successFlash !== 'undefined' && successFlash.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= successFlash %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (typeof errorFlash !== 'undefined' && errorFlash.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorFlash %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    </div>

    <!-- Content Section -->
    <div class="container">
        <h1 class="mt-4 mb-4">Compose Notice</h1>
        <form action="/send-notice" method="POST">
            <div class="mb-3">
                <label for="noticeContent" class="form-label">Notice Content</label>
                <textarea class="form-control" id="noticeContent" name="noticeContent" rows="5"></textarea>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" id="category" name="category">
                    <option value="SPL-I">SPL-I</option>
                    <option value="DP-I">DP-I</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Send Notice</button>
        </form>
    </div>

    <!-- Bootstrap core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
