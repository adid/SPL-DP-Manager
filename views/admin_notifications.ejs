<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Notifications</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background: linear-gradient(to right, #f0f0f0, #f0f0f0); /* Adjusted gradient background */
            color: #333; /* Default text color */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-top: 20px;
        }

        .container {
            margin-top: 50px;
            padding: 0 20px;
        }

        .card {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
            color: #333;
        }

        .card h2 {
            font-weight: bold;
            color: #6c5ce7; /* Purple color for heading */
        }

        .navbar {
            background: #007bff; /* Blue color for navbar */
            padding: 10px 0;
        }

        .navbar-brand {
            color: #fff;
            font-weight: bold;
        }

        .navbar-brand:hover {
            color: #a29bfe;
        }

        .back-btn {
            background-color: #6c5ce7;
            border-radius: 20px;
            font-weight: bold;
            color: white;
            transition: 0.3s;
            padding: 10px 20px;
        }

        .back-btn:hover {
            background-color: #a29bfe;
            color: #fff;
        }

        .dashboard-title {
            font-size: 2.5rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 40px;
            color: #6c5ce7; /* Purple color for title */
        }

        /* Dynamic color changes */
        .container-fluid {
            animation: changeColor 10s infinite alternate;
        }

        @keyframes changeColor {
            0% {
                filter: hue-rotate(0deg);
            }
            100% {
                filter: hue-rotate(360deg);
            }
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="#">Announcements</a>
        </div>
    </nav>

    <!-- Notifications Section -->
    <div class="container-fluid">
        <h1 class="dashboard-title">Announcements</h1>

        <% notifications.forEach(notification => { %>
        <div class="card">
            <h2><%= notification.message %></h2>
            <p>Category: <%= notification.category %></p>
            <p>Sender: <%= notification.sender_username %></p>
            <p>Sent At: <%= new Date(notification.created_at).toLocaleString() %></p>
        </div>
        <% }) %>

        <div class="text-center mt-5">
            <a class="btn back-btn" href="/admin-dashboard">Back to Dashboard</a>
        </div>
    </div>

    <!-- Bootstrap core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
