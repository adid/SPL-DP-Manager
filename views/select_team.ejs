<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Select Team for Attendance" />
    <meta name="author" content="" />
    <title>Select Team</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            font-family: Arial, sans-serif; /* Sans-serif font */
            padding-top: 20px; /* Padding on top */
        }

        .container {
            margin-top: 50px; /* Top margin for spacing */
            text-align: center; /* Center text alignment */
        }

        .team-list {
            display: flex;
            flex-wrap: wrap; /* Allow cards to wrap */
            justify-content: center; /* Center the cards */
            gap: 20px; /* Gap between cards */
        }

        .team-card {
            width: 300px; /* Fixed width for consistent layout */
            background-color: #ffffff; /* White background for cards */
            border: 1px solid #dddddd; /* Light border */
            border-radius: 10px; /* Rounded corners */
            padding: 20px; /* Padding inside card */
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
            transition: transform 0.2s ease-in-out; /* Animation on hover */
        }

        .team-card:hover {
            transform: scale(1.05); /* Scale up on hover */
            background-color: #f1f1f1; /* Slight background change on hover */
        }

        .team-header {
            font-weight: bold; /* Bold text for header */
            margin-bottom: 15px; /* Space below the header */
        }

        .team-details {
            text-align: left; /* Left-align text inside the card */
        }

        .btn-primary {
            background-color: #007bff; /* Button color */
            border: none; /* No border */
        }

        .btn-back {
            background-color: #0056b3;
            border-color: white;
            color: white;
            transition: background-color 0.3s ease;
        }

        .btn-back:hover {
            background-color: red;
            border-color: #545b62;
            color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Select a Team for Attendance</h1>
        <div class="team-list">
            <% teams.forEach(function (team) { %>
                <div class="team-card">
                    <div class="team-header">Team <%= team.team_name %></div>
                    <div class="team-details">
                        <p><strong>Members:</strong></p>
                        <ul>
                            <li>Leader: Student <%= team.team_leader_id %></li>
                            <li>Member 2: Student <%= team.student_2_id %></li>
                            <li>Member 3: Student <%= team.student_3_id %></li>
                        </ul>
                        <p><strong>Category:</strong> <%= team.category %></p>
                        <p><strong>Academic Year:</strong> <%= team.academic_year %></p>
                    </div>
                    <a href="/take-attendance/<%= team.team_id %>" class="btn btn-primary mt-3">Take Attendance</a>
                </div>
            <% }); %>
        </div>
        <!-- Back to Dashboard Button -->
        <div class="text-center mt-4">
            <a href="/teacher-dashboard" class="btn btn-back">Back to Dashboard</a>
        </div>
    </div>

    <!-- Bootstrap core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
