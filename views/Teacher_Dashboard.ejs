<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes" />
    <title>Teacher Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" />
    <!-- Custom CSS -->
    <style>
        
        body {
            color: #343a40;
            font-family: 'Roboto', sans-serif;
            background-image: url('https://cdn.govexec.com/media/featured/wwt6.gif');
        }

        .navbar {
            background-color: #007bff;
            padding: 15px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        .navbar-brand {
            font-weight: bold;
            color: white;
            font-size: 24px;
        }

        .container {
            padding-top: 50px;
        }

        .dashboard-title {
            font-size: 36px;
            text-align: center;
            margin-bottom: 30px;
            color: #007bff;
            font-weight: bold;
        }

        .card {
            background: rgba(255, 255, 255, 0.9);
            border: none;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .card h2 {
            font-weight: bold;
            color: #343a40;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn {
            background-color: #007bff;
            border-radius: 20px;
            font-weight: bold;
            color: white;
            transition: 0.3s;
        }

        .btn i {
            margin-right: 8px;
        }

        .btn-light {
            background-color: #e0eafc;
            color: #007bff;
        }

        .btn-light:hover {
            background-color: #cfdef3;
            color: #0056b3;
        }

        .btn:hover {
            background-color: #0056b3;
            color: #fff;
        }

        .logout-btn {
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
        border: none;
        margin-top: -20px;
        border-radius: 20px;
        padding: 10px 20px;
        color: white;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        
    }

    .logout-btn:hover {
        background: linear-gradient(45deg, #ff4b2b, #ff416c);
        transform: translateY(-3px);
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
    }

    .logout-btn:active {
        background: linear-gradient(45deg, #ff4b2b, #ff416c);
        transform: translateY(-1px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    .logout-btn:focus {
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(255, 75, 43, 0.5);
    }

        .info-item {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .info-item i {
            color: #007bff;
            margin-right: 15px;
            font-size: 24px;
        }

        .info-item span {
            font-weight: bold;
            color: #007bff;
            font-size: 18px;
            font-family: 'Roboto', sans-serif;
        }

        .info-item p {
            display: inline-block;
            margin: 0;
            font-size: 18px;
            color: #343a40;
            margin-left: 10px;
            font-family: 'Cursive', sans-serif;
            font-weight: bold;
        }

        .info-card {
            text-align: left;
            padding: 20px;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="container">
            <a class="navbar-brand" href="#">Teacher Dashboard</a>
        </div>
    </nav>

     <!-- Flash Message -->
     <div class="alert-container">
        <% if (typeof successFlash !== 'undefined' && successFlash.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= successFlash %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (typeof errorFlash !== 'undefined' && errorFlash.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorFlash %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    </div>

    <!-- Dashboard Section -->
    <div class="container">
        <h1 class="dashboard-title">Welcome to the Teacher Dashboard</h1>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <h2>Actions</h2>
                    <a href="/teams" class="btn btn-light btn-block mb-2"><i class="fas fa-users"></i> View Teams</a>
                    <a href="/students" class="btn btn-light btn-block mb-2"><i class="fas fa-user-graduate"></i> View Students</a>
                    <a href="/requests" class="btn btn-light btn-block mb-2"><i class="fas fa-envelope"></i> View Requests</a>
                    <a href="/view-meetings" class="btn btn-light btn-block mb-2"><i class="fas fa-users"></i> View Meetings</a>
                    <a href="/schedule_meeting" class="btn btn-light btn-block mb-2"><i class="fas fa-calendar-alt"></i> Schedule Meeting</a>
                    <a href="/select-team" class="btn btn-light btn-block mb-2"><i class="fas fa-check-square"></i> Take Attendance</a>
                    <a href="/view-attendance" class="btn btn-light btn-block mb-2"><i class="fas fa-list-alt"></i> View Attendance</a>
                    <a href="/input-marks" class="btn btn-light btn-block mb-2"><i class="fas fa-pen"></i> Input Marks</a>
                    <a href="/view-marks" class="btn btn-light btn-block mb-2"><i class="fas fa-chart-line"></i> View Marks</a>
                    <% if (hasUnreadNotifications) { %>
                        <a href="/teacher-notifications" class="btn btn-danger btn-block mt-3">Notifications (<%= unreadNotifications.length %>)</a>
                    <% } else { %>
                        <a href="/teacher-notifications" class="btn btn-secondary btn-block mt-3">Notifications</a>
                    <% } %>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card info-card">
                    <h2>Teacher Information</h2>
                    <div class="info-item">
                        <i class="fas fa-id-badge"></i>
                        <span>ID:</span>
                        <p><%= teacher.id %></p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-user"></i>
                        <span>Username:</span>
                        <p><%= teacher.username %></p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-briefcase"></i>
                        <span>Role:</span>
                        <p><%= teacher.role %></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <a class="btn logout-btn" href="/user-logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </div>

    <!-- Bootstrap core JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>