<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>
        <%= title %>
    </title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="icons/iut-logo.jpeg" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Core theme CSS -->
    <style>
        body {
            background-image: url('https://cdn.govexec.com/media/featured/wwt6.gif');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .table {
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        }

        .table th,
        .table td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: center;
        }

        .table th {
            background-color: #f8f9fa;
        }

        .table a {
            color: #0d6efd;
            text-decoration: none;
        }

        .table a:hover {
            color: #0b5ed7;
            text-decoration: underline;
        }

        .btn-accept {
        background-color: #28a745;
        color: white; /* Text color */
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.25rem;
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

    .btn-reject {
        background-color: #dc3545;
        color: white; /* Text color */
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.25rem;
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

    .btn-accept:hover {
        background-color: #218838;
        text-decoration: none;
    }

    .btn-reject:hover {
        background-color: #c82333;
        text-decoration: none;
    }

    .btn-accept:link, .btn-accept:visited, .btn-accept:focus, 
    .btn-reject:link, .btn-reject:visited, .btn-reject:focus {
        color: white;
        text-decoration: none;
    }
    </style>
</head>

<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container">
            <img src="icons/iut-logo.jpeg" width="40" height="50" class="d-inline-block align-top" alt="">
            <a class="navbar-brand text-white" href="#">Requests</a>
        </div>
    </nav>

    <!-- Requests Table Section -->
    <div class="container mt-5">
        <h2 class="text-center mb-4"><%= title %></h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Team ID</th>
                    <th>Team Name</th>
                    <th>Category</th>
                    <th>Ideas</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% allRequests.map((request, index) => { %>
                <tr>
                    <td><%= request.date %></td>
                    <td><%= request.team_id %></td>
                    <td><%= request.team_name %></td>
                    <td><%= request.category %></td>
                    <td><%= request.ideas %></td>
                    <td>
                        <a href="/requests/<%= request.team_id %>/<%= request.supervisor_id %>/accept" class="btn btn-accept">Accept</a>
                        <a href="/requests/<%= request.team_id %>/<%= request.supervisor_id %>/reject" class="btn btn-reject">Reject</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
   
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
