<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Notifications</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="icons/iut-logo.jpeg" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa; /* Set background color */
            color: #000000; /* Set text color to black */
            font-family: Arial, sans-serif; /* Use a sans-serif font */
            padding-top: 20px; /* Add padding to the top */
        }

        .container {
            margin-top: 50px;
            padding: 0 20px; /* Add padding to container */
        }

        .notification-container {
            margin-bottom: 20px;
            padding: 10px;
            background-color: #ffffff; /* Set background color */
            border-radius: 10px; /* Add border radius */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Add shadow effect */
        }

        .notification-message {
            font-weight: bold; /* Make message text bold */
        }
    </style>
</head>
<body>
  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container">
            <img src="icons/iut-logo.jpeg" width="40" height="50" class="d-inline-block align-top" alt="">
            <a class="navbar-brand text-white" href="#">Notifications</a>
        </div>
    </nav>
    <!-- Notification List -->
    <div class="container">
        <h1 class="mb-4">Notifications</h1>
        <% if (notifications.length > 0) { %>
            <% notifications.forEach(function(notification) { %>
                <div class="notification-container">
                    <p class="notification-message"><%= notification.message %></p>
                </div>
            <% }); %>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                No notifications found.
            </div>
        <% } %>
    </div>
    
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>